---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout
    headline="HOME"
    bgImage="/imgs/caption-bgs/page-caption-index.svg"
    paratext="向往和平的人放弃了战马，毫不犹豫地走向橄榄树."
>
    <div class="content">
        <div class="search">
            <h2>Get what you want to learn!</h2>
            <input
                type="text"
                placeholder="Search (Sorry, it is disabled now.)"
            />
        </div>
    </div>
</PageLayout>

<style lang="scss">
    .content {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 100px 0;
    }

    .search {
        width: 100%;
        height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transform: translateY(-100px);

        input {
            width: 80%;
            max-width: 400px;
            height: 36px;
            border-radius: 4px;
            border: 1px solid lightgrey;
            padding: 0 10px;

            &:focus {
                outline-color: #7ca4a1;
            }
        }
    }
</style>
