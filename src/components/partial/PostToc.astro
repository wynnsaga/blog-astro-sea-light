---
import { type MarkdownHeading } from "astro";
interface Props {
    headings: MarkdownHeading[];
}

const { headings } = Astro.props;
---

<div class="post-toc">
    <span class="title">目录 Content</span>
    <div class="toc-wrapper">
        {
            headings.map((heading) => (
                <a
                    href={Astro.url + "#" + heading.slug}
                    style={`padding-left: ${(heading.depth - 1) * 20}px`}
                >
                    {heading.text}
                </a>
            ))
        }
    </div>
</div>

<style lang="scss">
    .post-toc {
        width: 200px;
        margin: 0 10px;
        background-color: white;
        border-radius: 4px;
        // padding: 20px;
    }

    .title {
        display: block;
        font-weight: bold;
        margin-bottom: 10px;
        margin-left: -5px;
    }

    .toc-wrapper {
        max-height: 60vh;
        overflow: hidden;
        overflow-y: scroll;
        scrollbar-color: whitesmoke white;
    }

    a {
        display: block;
        text-decoration: none;
        color: #333333;
        font-size: 0.8rem;
        text-wrap: wrap;
        line-height: 2;

        &:hover {
            color: orange;
        }
    }
</style>
