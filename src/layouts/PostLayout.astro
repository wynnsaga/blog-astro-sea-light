---
// 推文布局
// 该布局只应用于推文
import BackToTop from "../components/misc/BackToTop.vue"
---

<div class="post-layout">
  <div class="post-left">
    <slot name="left" />
  </div>

  <div class="post-main">
    <div class="post-header">
      <slot name="header" />
    </div>
    <hr />
    <div class="post-content">
      <slot />
    </div>
    <div class="post-footer">
      <slot name="footer" />
    </div>
  </div>
  
  <div class="post-right">
    <slot name="right" />
  </div>
  <BackToTop client:only="vue"></BackToTop>
</div>

<style lang="scss">
  .post-layout {
    position: relative;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 40px 0;

    & > .post-main {
      box-sizing: border-box;
      background-color: white;
      border-radius: 4px;
      padding: 40px;
      width: 100%;

      hr {
        border: 1px dashed lightgrey;
      }
    }
  }

  .post-header {
    font-size: 2.15rem;
    font-weight: bold;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .post-content {
    width: 100%;
  }

  .post-footer {
    font-size: 0.75rem;
    color: grey;
    margin: 4rem 0;
  }

  .post-right {
  }


</style>
